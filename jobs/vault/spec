---
name: vault

templates:
  vault_ctl: bin/vault_ctl
  config.hcl.erb: config/config.hcl
  ssl.key.erb: config/ssl.key
  ssl.crt.erb: config/ssl.crt

packages:
- vault

properties:
  bind_ip:
    description: |
      Address for the TCP connection to listen on
    default: 0.0.0.0
  bind_port:
    description: |
      Port for the TCP connection to listen on
    default: 8200

  tls_cert:
    description: |
      Contenxt of the PEM-encoded TLS server cert
  tls_key:
    description: |
      Contenxt of the PEM-encoded TLS server private key
